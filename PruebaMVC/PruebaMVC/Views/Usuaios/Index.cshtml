@model IEnumerable<PruebaMVC.Models.tbUsuaios>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card">
                
    <div class="card-header">
                Esdra la queremos ♥ <3
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col">
                <table class="table" id="example">
                    <tr>
                                                        <th>
                            @Html.DisplayNameFor(model => model.usu_Usuario)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.usu_Password)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.usu_Admin)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.usu_Estado)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.usu_FechaCreacion)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.usu_FechaModificacion)
                        </th>
                                                                                                                                                        <th>
                            @Html.DisplayNameFor(model => model.tbEmpleados2.emp_PrimerNombre)
                        </th>
                                                                                                                                                                                                                                                                        <th>
                            @Html.DisplayNameFor(model => model.tbUsuaios2.usu_Usuario)
                        </th>
                                                                        <th>
                            @Html.DisplayNameFor(model => model.tbUsuaios3.usu_Usuario)
                        </th>
                                        <th>Detalles</th>
                        <th>Editar</th>
                        <th>Borrar</th>
                    </tr>
                
                @foreach (var item in Model) {
                    <tr>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.usu_Usuario)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.usu_Password)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.usu_Admin)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.usu_Estado)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.usu_FechaCreacion)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.usu_FechaModificacion)
                        </td>
                                                                                                                                                        <td>
                            @Html.DisplayFor(modelItem => item.tbEmpleados2.emp_PrimerNombre)
                        </td>
                                                                                                                                                                                                                                                                        <td>
                            @Html.DisplayFor(modelItem => item.tbUsuaios2.usu_Usuario)
                        </td>
                                                                        <td>
                            @Html.DisplayFor(modelItem => item.tbUsuaios3.usu_Usuario)
                        </td>
                                        <td>
                        @Html.ActionLink("Detalles", "Details", new { id=item.usu_Id }, new { @class = "btn btn-block btn-info" })
                           
                        </td>
                        <td>
                        <a href="" class="btn btn-block btn-warning">♥ @Html.ActionLink("Editar", "Edit", new { id=item.usu_Id })</a>
                            
                        </td>
                        <td>
                        <a href="" class="btn btn-block btn-danger">♥ @Html.ActionLink("Borrar", "Delete", new { id=item.usu_Id })</a>
                        </td>
                                    </tr>
                }
                
                </table>
            </div>
        </div>
    </div>

</div>
